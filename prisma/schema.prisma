generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @default(1)
  name  String @unique
  users User[]
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  fullName     String
  roleId       Int
  role         Role      @relation(fields: [roleId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  cashierShifts CashierShift[]
  sales         Sale[]
  billPayments  BillPayment[]
  auditLogs     AuditLog[]      @relation("UserAuditLogs")
}

model Store {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
  address   String?
  terminals Terminal[]
  stock     Stock[]
  sales     Sale[]
  billPayments BillPayment[]
  cashierShifts CashierShift[]
}

model Terminal {
  id        Int     @id @default(autoincrement())
  identifier String @unique
  storeId   Int
  store     Store  @relation(fields: [storeId], references: [id])
  sales     Sale[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Supplier {
  id       Int       @id @default(autoincrement())
  name     String
  contact  String?
  products Product[]
}

model Product {
  id               Int             @id @default(autoincrement())
  name             String
  sku              String          @unique
  isbn             String?
  barcode          String          @unique
  categoryId       Int?
  category         Category?       @relation(fields: [categoryId], references: [id])
  supplierId       Int?
  supplier         Supplier?       @relation(fields: [supplierId], references: [id])
  price            Decimal         @db.Decimal(10, 2)
  cost             Decimal         @db.Decimal(10, 2)
  unit             String
  reorderThreshold Int             @default(0)
  stock            Stock[]
  saleItems        SaleItem[]
  barcodeHistory   BarcodeHistory[]

  @@index([barcode])
  @@index([sku])
  @@index([name])
}

model Stock {
  id        Int      @id @default(autoincrement())
  productId Int
  storeId   Int
  quantity  Int      @default(0)
  product   Product  @relation(fields: [productId], references: [id])
  store     Store    @relation(fields: [storeId], references: [id])

  @@unique([productId, storeId])
}

model Customer {
  id        Int        @id @default(autoincrement())
  name      String
  email     String?    @unique
  phone     String?
  credit    Decimal    @default(0) @db.Decimal(10, 2)
  sales     Sale[]
}

model Sale {
  id           Int          @id @default(autoincrement())
  storeId      Int
  terminalId   Int?
  userId       Int
  customerId   Int?
  total        Decimal      @db.Decimal(10, 2)
  discount     Decimal      @default(0) @db.Decimal(10, 2)
  createdAt    DateTime     @default(now())
  deliveryDate DateTime?
  deliveryNote String?
  items        SaleItem[]
  payments     Payment[]
  customer     Customer?    @relation(fields: [customerId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
  store        Store        @relation(fields: [storeId], references: [id])
  terminal     Terminal?    @relation(fields: [terminalId], references: [id])
}

model SaleItem {
  id          Int      @id @default(autoincrement())
  saleId      Int
  productId   Int
  quantity    Int
  price       Decimal  @db.Decimal(10, 2)
  discount    Decimal  @default(0) @db.Decimal(10, 2)
  subtotal    Decimal  @db.Decimal(10, 2)
  sale        Sale     @relation(fields: [saleId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
}

model Payment {
  id          Int      @id @default(autoincrement())
  saleId      Int
  method      String
  amount      Decimal  @db.Decimal(10, 2)
  metadata    Json?
  sale        Sale     @relation(fields: [saleId], references: [id])
}

model BillPayment {
  id          Int      @id @default(autoincrement())
  provider    String
  reference   String
  amount      Decimal  @db.Decimal(10, 2)
  status      String
  userId      Int
  storeId     Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  store       Store    @relation(fields: [storeId], references: [id])

  @@index([provider, reference])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  actorId   Int?
  action    String
  entity    String
  entityId  Int?
  data      Json?
  createdAt DateTime @default(now())
  actor     User?    @relation("UserAuditLogs", fields: [actorId], references: [id])

  @@index([entity, entityId])
}

model CashierShift {
  id         Int      @id @default(autoincrement())
  userId     Int
  storeId    Int
  openedAt   DateTime @default(now())
  closedAt   DateTime?
  openingFloat Decimal @default(0) @db.Decimal(10, 2)
  closingCash  Decimal @default(0) @db.Decimal(10, 2)
  user       User     @relation(fields: [userId], references: [id])
  store      Store    @relation(fields: [storeId], references: [id])
}

model BarcodeHistory {
  id          Int      @id @default(autoincrement())
  productId   Int
  barcode     String
  createdAt   DateTime @default(now())
  product     Product  @relation(fields: [productId], references: [id])
}

model Ref {
  id          Int           @id @default(autoincrement())
  name        String
  email       String?
  companyName String
  phone       String?
  deliveries  RefDelivery[]
  createdAt   DateTime      @default(now())
}

model RefDelivery {
  id           Int      @id @default(autoincrement())
  refId        Int
  companyName  String
  billNumber   String?
  billDate     DateTime?
  billImageUrl String?
  notes        String?
  createdAt    DateTime @default(now())
  ref          Ref      @relation(fields: [refId], references: [id])

  @@index([refId])
  @@index([companyName])
}


